<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="MyCustomTheme" parent="MyCustomTheme.Base"></style>

    <style name="MyCustomTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <!-- Theme for toolbar normal theme -->

    <style name="ToolbarCustomTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/sub_heading_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Theme for toolbar pop up theme -->

    <style name="MyCustomPopUpTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:background">@color/white</item>
        <!--  item for setting the background color of item selected from the list -->
        <item name="listChoiceBackgroundIndicator">@color/white</item>
    </style>


    <style name="MyCustomTextView">
        <item name="android:textSize">@dimen/application_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">Chalet-ParisNineteenSixty.otf</item>
        <item name="android:padding">@dimen/application_text_view_padding
        </item>
    </style>

    <!-- Theme for Heading TextView/EditText -->

    <style name="HeadingTextView">
        <item name="android:textSize">@dimen/application_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">Chalet-ParisNineteenSixty.otf</item>
        <item name="android:padding">@dimen/application_text_view_padding
        </item>
    </style>

    <!-- Theme for Sub-Heading TextView/EditText regular font  -->

    <style name="SubHeadingTextView">
        <item name="android:textSize">@dimen/sub_heading_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">SF_UI_Display_Regular.otf</item>
        <item name="android:padding">@dimen/application_text_view_padding
        </item>
    </style>

    <!-- Theme for Normal TextView/EditText light font -->

    <style name="SmallNormalTextView">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">SF_UI_Display_Light.otf</item>
        <item name="android:padding">@dimen/application_text_view_padding
        </item>
    </style>


    <!-- Theme for Normal TextView/EditText light font -->

    <style name="NormalTextView">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">SF_UI_Display_Light.otf</item>
        <item name="android:padding">@dimen/application_text_view_padding
        </item>
    </style>

    <!-- Theme for Normal TextView/EditText meium font -->
    <style name="NormalTextViewWithMediumFont">
    <item name="android:textSize">@dimen/medium_text_size</item>
    <item name="android:textColor">@color/white</item>
    <item name="fontPath">SF_UI_Display_Medium.otf</item>
    <item name="android:padding">@dimen/application_text_view_padding
    </item>
</style>


    <!-- Theme for Normal TextView/EditText regular font -->
    <style name="NormalTextViewWithRegularFont">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">SF_UI_Display_Regular.otf</item>
        <item name="android:padding">@dimen/padding_3_dp
        </item>
    </style>


    <!-- Theme for Normal TextView/EditText meium font -->
    <style name="StyleForCheat">
        <item name="android:textSize">@dimen/cheat_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">@dimen/application_text_view_padding</item>
        <item name="android:paddingTop">@dimen/application_text_view_padding</item>
    </style>


    <!-- Theme for checkbox -->
    <style name="Theme.AppCompat.CheckBox" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>



</resources>
